<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.kaldin.user.register.dto.RegisterDTO" table="exm_user">
		<meta attribute="class-description">
			This is the HiBernate Mapping file for exam class
		</meta>

		<id name="userId" column="userid" type="int">
			<generator class="native"></generator>
		</id>

		<property name="firstName" column="firstname" type="string"
			not-null="true">
		</property>
		<property name="lastName" column="lastname" type="string"
			not-null="true">
		</property>

		<property name="userName" column="username" type="string"
			not-null="true">
		</property>
		<property name="password" column="password" type="string"
			not-null="true">
		</property>
		
		<property name="role" column="role" type="int" not-null="true">
		</property>
		<property name="companyId" column="companyid" type="int" not-null="true">
		</property>

		<property name="contactNumber" column="contactno" type="string">
		</property>

		<property name="email" column="email" type="string" not-null="true">
		</property>

		<property name="address" column="address" type="string">
		</property>
		<property name="timeZone" column="timezone" type="string">
		</property>
		<property name="country" column="country" type="string">
		</property>
		<property name="State" column="State" type="string">
		</property>
		<property name="city" column="City" type="string">
		</property>
		<property name="isdeleted" column="isdeleted" type="int">
		</property>

	</class>
</hibernate-mapping>