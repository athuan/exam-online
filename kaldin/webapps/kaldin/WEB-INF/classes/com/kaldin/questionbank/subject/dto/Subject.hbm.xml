<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping >
	<class name="com.kaldin.questionbank.subject.dto.SubjectDTO" table="exm_subject" >
		<meta attribute="class-description" >
			This is the HiBernate Mapping file for subject class
		</meta>

		<id name="subjectId" column="subjectid" type="int">
			<generator class="native"></generator>
		</id>

		<property name="subjectName" column="subjectname" type="string"
			not-null="true">
		</property>
		<property name="companyId" column="companyid" type="int"
			not-null="true">
		</property>
	</class>
</hibernate-mapping>