<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="com.kaldin.common.stateCountry.state.dto.StateDTO" table="exm_state">
		<meta attribute="class-description">
			This is the HiBernate Mapping file for country class
		</meta>

		<id name="stateId" column="sid" type="int">
			<generator class="native"></generator>
		</id>

		<property name="CountryId" column="cid" type="int"
			not-null="true">
		</property>
		
		<property name="stateName" column="sname" type="string"
			not-null="true">
		</property>
	</class>
</hibernate-mapping>