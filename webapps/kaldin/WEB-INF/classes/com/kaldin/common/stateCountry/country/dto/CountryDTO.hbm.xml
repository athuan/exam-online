<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.kaldin.common.stateCountry.country.dto.CountryDTO" table="exm_country">
		<meta attribute="class-description">
			This is the HiBernate Mapping file for country class
		</meta>

		<id name="countryId" column="cid" type="int">
			<generator class="native"></generator>
		</id>

		<property name="countryCode" column="ccode" type="string"
			not-null="true">
		</property>
		
		<property name="countryName" column="cname" type="string"
			not-null="true">
		</property>
	</class>
</hibernate-mapping>